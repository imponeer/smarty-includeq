{
    "name": "imponeer/smarty-includeq",
    "description": "Rewritten smarty 'include' variant that was invented for use in XOOPS, but nowadays is used in some other PHP based CMS'es",
    "type": "library",
    "require": {
        "php": "^8.3",
        "smarty/smarty": "^5.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Raimondas Rimkeviƒçius",
            "email": "github@mekdrop.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "Imponeer\\Smarty\\Extensions\\IncludeQ\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Imponeer\\Smarty\\Extensions\\IncludeQ\\Tests\\": "tests/"
        }
    },
    "keywords": [
        "smarty",
        "xoops",
        "include",
        "smarty-plugins"
    ],
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.9",
        "phpstan/phpstan": "^2.0"
    },
    "scripts": {
        "test": "phpunit --testdox",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpstan": "phpstan analyse"
    }
}
